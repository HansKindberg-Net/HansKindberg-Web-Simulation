                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="brand" href="#">Sample MVC application for integration testing</a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li@{
                                   if(this.Request.RawUrl.Equals("/"))
                                   {
                                       <text> class="active"</text>
                                   }
                               }>@this.Html.ActionLink("Home", "Index", "Home")</li>
                            <li@{
                                   if(this.Request.RawUrl.StartsWith("/Home/About", StringComparison.OrdinalIgnoreCase))
                                   {
                                       <text> class="active"</text>
                                   }
                               }>@this.Html.ActionLink("About", "About", "Home")</li>
                        </ul>
                        <p class="btn pull-right">@this.Html.Partial("_LogOnPartial")</p>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>
